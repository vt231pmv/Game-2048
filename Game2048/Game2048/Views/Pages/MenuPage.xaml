<Page x:Class="Game2048.Views.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game2048.Views.Pages" 
      xmlns:vm="clr-namespace:Game2048.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:MenuViewModel />
    </Page.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" Margin="10">
            <Label Style="{StaticResource MenuLabelStyle}" Content="2048" />
            <Button Style="{StaticResource MenuButtonStyle}" Content="Грати" 
                    Command="{Binding NavigateToGamePage}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Page}}}"/>
            <Button Style="{StaticResource MenuButtonStyle}" Content="Статистика" 
                    Command="{Binding NavigateToStatisticsPage}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Page}}}"/>
            <Button Style="{StaticResource MenuButtonStyle}" Content="Вийти"
                    Command="{Binding QuitApp}" />
        </StackPanel>
    </Grid>
</Page>
